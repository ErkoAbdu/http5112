@model School_Project.Models.Student
@{
    ViewBag.Title = "Show";
}

<!--lists mnore specified information on entry selected-->
<div id="containershow">
    <h2>@Model.StudentFName @Model.StudentLName</h2>
    <ul>
        <li><strong>Student ID: </strong>@Model.StudentId</li>
        <li><strong>Student Number: </strong>@Model.StudentNumber</li>
        <li><strong>Date of Enrollment: </strong>@Model.EnrolDate.ToString("MMMM-dd-yyyy")</li>
    </ul>
    <nav>
        <!--link to either go back to list or delete entry which takes to another page-->
        <a class="navlink" href="/Student/List">Back to Student List</a>
        <a class="dellink" href="/Student/DeleteConfirm/@Model.StudentId">Delete</a>
        <a class="navlink" href="/Student/Update/@Model.StudentId">Update</a>
    </nav>
</div>