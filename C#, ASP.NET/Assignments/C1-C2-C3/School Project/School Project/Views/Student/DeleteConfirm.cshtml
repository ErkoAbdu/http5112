@model School_Project.Models.Student

@{
    ViewBag.Title = "DeleteConfirm";
}

<div id="containershow">
    <nav>
        <!--Option to cancel and go back to show-->
        <a class="navlink" href="/Student/Show/@Model.StudentId">Cancel</a>
    </nav>
    <h2>Are you sure that you want to delete @Model.StudentFName @Model.StudentLName?</h2>
    <p>This action cannot be undone...</p>
    <ul>
        <li>Student ID: @Model.StudentId</li>
        <li>Student Number: @Model.StudentNumber</li>
        <li>Date of Enrollment: @Model.EnrolDate</li>
    </ul>
    <!--runs delete query in data controller removing the entry-->
    <form method="POST" action="/Student/Delete/@Model.StudentId">
        <button class="dellbtn">Confirm Delete</button>
    </form>
</div>
