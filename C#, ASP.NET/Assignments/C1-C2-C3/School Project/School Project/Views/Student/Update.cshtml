@model School_Project.Models.Student
@{
    ViewBag.Title = "Update";
}

<!--form to update an  entry-->
<div id="ContainerUpdate">
    <h2>Update Student</h2>
    <form name="UpdateStudent" method="POST" action="/Student/Update/@Model.StudentId">
        <div>
            <label for="StudentFName">Student First Name:</label>
            <input type="text" id="StudentFName" name="StudentFName" value="@Model.StudentFName" />
        </div>
        <div>
            <label for="StudentLName">Student Last Name:</label>
            <input type="text" id="StudentLName" name="StudentLName" value="@Model.StudentLName" />
        </div>
        <div>
            <label for="StudentNumber">Student Number:</label>
            <input type="text" id="StudentNumber" name="StudentNumber" value="@Model.StudentNumber" />
        </div>
        <div>
            <label for="EnrolDate">Enrol Date:</label>
            <input type="date" id="EnrolDate" name="EnrolDate" value="@Model.EnrolDate" />
        </div>
        <div>
            <input type="submit" value="Update Student" />
        </div>
    </form>
    <nav>
        <a class="navlink" href="/Student/Show/@Model.StudentId">Back</a>
    </nav>
</div>